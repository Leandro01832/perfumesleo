
@model  business.Pedido
<h3>Resumo do Pedido</h3>

<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <a class="btn btn-success" asp-action="buscaprodutos">
                Voltar ao Catálogo
            </a>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Nº do Pedido: @Model.IdPedido</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus Dados</h3>
                <div>@Model.Cliente.FirstName</div>
                <div>@Model.Cliente.LastName</div>
                <div>@Model.Cliente.Telefone.Fone</div>
            </div>
            <div class="col-md-3">
                @Model.Cliente.UserName
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega</h3>
                <div>@Model.Cliente.Endereco.Rua @Model.Cliente.Endereco.Complemento - @Model.Cliente.Endereco.Bairro - CEP: @Model.Cliente.Endereco.Cep - @Model.Cliente.Endereco.Cidade - @Model.Cliente.Endereco.Estado - Brasil</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantidade</h3>
            </div>
        </div>

        @foreach (var item in Model.Itens)
        {


            <div class="row">
                <div class="col-md-10">
                    <div>@item.produto.Nome</div>
                </div>
                <div class="col-md-2">
                    <div class="pull-right">@item.Quantidade</div>
                </div>
            </div>
        }

    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <a class="btn btn-success" asp-action="buscaprodutos">
                Voltar ao Catálogo
            </a>
        </div>
    </div>
</div>